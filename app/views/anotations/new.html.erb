<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Nova Anotação</h4>
  </div>
  <div class="justify-content-center">
    <%= form_with scope: :anotation, url: anotations_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title, 'Titulo' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :note, 'Anotação' %>
        <%= form.cktext_area :note, ckeditor:{toolbar: 'mini', language: 'pt-br'}, class: 'form-control' %>
      </div>

      <div class="form-inline justify-content-start mb-4">
        <div class="form-group mr-5">
          <%= form.label :date, 'Data e Hora' %>
          <%= form.datetime_local_field :date, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :priority, 'Prioridade'%>
          <%= form.select :priority, ["Alta", "Media", "Baixa"], class: 'form-control' %>
        </div>
      </div>

      <div class="form-group d-inline-flex align-items-start">
        <%= form.submit 'Salvar Anotação', class: 'form-control btn-success mb-1 mr-3' %>
        <%= link_to 'Cancelar', root_path, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
