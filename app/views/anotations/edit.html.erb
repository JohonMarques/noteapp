<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Editar Anotação <%= @anotation.title %> </h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @anotation, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title, 'Titulo' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :note, 'Anotação' %>
        <%= form.text_area :note, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :date, 'Data e Hora' %>
        <%= form.datetime_local_field :date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :priority, 'Prioridade' %>
        <%= form.select :priority, ["Alta", "Media", "Baixa"], class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit 'Salvar Alterações', class: 'form-control btn-success mb-1' %>
        <%= link_to 'Cancelar', root_path, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>